alias dotfiles='/usr/bin/git --git-dir=$HOME/dev/dotfiles --work-tree=$HOME'
alias g="git"
alias gd="git diff"
alias gb="git branch"
alias gf="git fetch origin"
alias gc="git commit"
alias gco="git checkout"
alias gl="git pull"
alias gls="git ls-tree --full-tree -r --name-only HEAD"
alias gm="git merge"
alias gp="git push"
alias gs="git status"
alias guser="git config user.name Cameron\ Stevenson && git config user.email cksteve@protonmail.com"
alias gwtf="git config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*'"
alias gwt="git worktree"
alias gu="git reset HEAD~"
