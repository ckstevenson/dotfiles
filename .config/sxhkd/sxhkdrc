# Basic binds
# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
super + Return
    $TERMINAL
#super + grave
super + @space
    key_lay
super + a
    $TERMINAL -e pulsemixer
super + b
    dmenu_chromium_app
super + c
    chromium
super + d
    dmenu_run -g 10 -l 10
super + f
    $TERMINAL -e $FILE
super + m
    slack && discord
super + p
    passmenu
super + s
    dmenu_xfreerdp
super + v
    virt-manager
super + w
    $BROWSER
super + z
    /usr/bin/pritunl-client-electron
super + shift + x
  betterlockscreen -l

# Special
XF86AudioRaiseVolume
    pactl set-sink-volume $(pactl list short sinks | head -n1 | cut -f1) +5%
XF86AudioLowerVolume
    pactl set-sink-volume $(pactl list short sinks | head -n1 | cut -f1) -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86MonBrightnessUp 
    xbacklight -inc 5
XF86MonBrightnessDown
    xbacklight -dec 5
XF86PowerOff
    prompt "Shutdown computer?" "sudo -A shutdown -h now"
XF86Display
    disp_layout.sh
#XF86WLAN
#    prompt "Not set"
XF86AudioMicMute
    toggle_mic
XF86Tools
    lxappearance
XF86Favorites
    prompt "Not set"

# focus the last node/desktop
super + Tab
    bspc desktop -f last

# quit bspwm
super + shift + Escape
    bspc quit

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# change monocle window
super + shift + bracket{left,right}
    bspc node -f {next, prev}.local}

# balance nodes
super + shift + b
    bspc node @/ -B

# toggle fullscreen
super + shift + f
    bspc node -t fullscreen || bspc node -t tiled

# send the newest marked node to the newest preselected node
super + shift + m
    bspc node newest.marked.local -n newest.!automatic.local

# Toggle floating on and off
super + shift + o
    bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# close and kill
super + shift + q
    bspc node -c

# restart bspwm
super + shift + r
    bspc wm -r

# swap desktops
#super + shift + s
#    bspc query -D -m HDMI-A-1 --names | xargs bspc desktop focused -s

# toggle tiled and monocle
super + shift + t
    bspc desktop -l next

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

# focus or send the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} {1-9,0}

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# node follow
super + alt + {1-9,0}
    bspc node -d {1-9,0} --follow

# expand a window by moving one of its side outward
#super + alt + {h,j,k,l}
#    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
#super + alt + shift + {h,j,k,l}
#    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Expand/contract a window by moving one of its side outward/inward
#   https://my-take-on.tech/2020/07/03/some-tricks-for-sxhkd-and-bspwm/
super + alt + {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
