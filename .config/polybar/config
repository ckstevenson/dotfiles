#font-1 = "Font Awesome 5 Free:style=Regular:size=9;0"
#font-2 = "Font Awesome 5 Free:style=Solid:size=9;0"
#font-3 = "Font Awesome 5 Brands:size=9;0"

modules-left = bspwm xwindow
modules-right = backlight pulseaudio xkeyboard filesystem memory cpu cpu_temp wlan eth battery date power-menu

wm-restack = bspwm

;override-redirect = true

#scroll-up = bspwm-desknext
#scroll-down = bspwm-deskprev
scroll-up = bspc desktop -f prev.local
scroll-down = bspc desktop -f next.local

cursor-click = pointer
#cursor-scroll = ns-resize

[module/power-menu]
type = custom/menu

label-open = 
label-close = 

; Optional item separator
; Default: none
label-separator = |
; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/bin/sh -c $COMMAND"

menu-0-0 = Reboot
menu-0-0-exec = reboot
menu-0-1 = Off
menu-0-1-exec = poweroff

